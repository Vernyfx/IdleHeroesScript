local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()


local Window = OrionLib:MakeWindow({Name = "VernyHUB", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})



local  Main = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

-- locals

local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart

_G.PlayersToFarm = game.Players.LocalPlayer.Name


_G.GetPlotID = function(plr)
    for i,v in pairs(game:GetService("Workspace").Plots:GetChildren()) do
        if v:FindFirstChild("Owner") and tostring(v:FindFirstChild("Owner").Value) == plr
        then
            return v.Name
        end
    end
end


local MainSection = Main:AddSection({
	Name = "Auto Farm"
})


--Da thing

Main:AddToggle({
	Name = "Auto Swing",
	Default = false,
	Callback = function(SWValue)
		_G.autoswing = SWValue;

task.spawn(function()
    while _G.autoswing do
        for i, v in pairs(game:GetService("Workspace").Plots[_G.GetPlotID(_G.PlayersToFarm)].Enemy:GetChildren()) do
            if v:IsA("Part") then
                game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.WeaponService.RE.Swing:FireServer(v)
            end
        end
        wait(0.01)
    end
end)
	end    
})

Main:AddToggle({
	Name = "Auto Tp To Mob",
	Default = false,
	Callback = function(AMValue)
		_G.autotpmob = AMValue;

task.spawn(function()
    while _G.autotpmob do
        for i, v in pairs(game:GetService("Workspace").Plots[_G.GetPlotID(_G.PlayersToFarm)].Enemy:GetChildren()) do
            if v:IsA("Part") then
                hrp.CFrame = v.CFrame * CFrame.new(0,5,0)
            end
        end
        wait(0.01)
    end
end)
	end    
})

Main:AddToggle({
	Name = "Auto Next Level",
	Default = false,
	Callback = function(NLValue)
		_G.autonl = NLValue;

task.spawn(function()
    while _G.autonl do
        for i,v in pairs(game:GetService("Workspace").Plots[_G.GetPlotID(_G.PlayersToFarm)].Buttons:WaitForChild("NextLevel"):GetDescendants()) do
            if v.Name == "Part" then
                hrp.CFrame = v.CFrame
                wait(0.1)
            end
        end
    end
end)
	end    
})


local Main = Window:MakeTab({
	Name = "Hero Stuff",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})




Main:AddToggle({
	Name = "Upgrade Selected hero 1X",
	Default = false,
	Callback = function(HU1Value)
		_G.hu1 = HU1Value
        print(_G.hu1)
	end    
})


Main:AddDropdown({
	Name = "Select The Hero You Want To Level",
	Default = " ",
	Options = {"Bounty Hunter", "Wandering Fisherman", "Blade Queen", "Sun God", "Old Master", "Robot Overlord", "Masked Samurai", "Assassin Zero", "Goddess of Light", "Skeleton King", "Magma Mage", "Ice Wizard", "Ice Cube", "Mad Scientist", "Dark Warlock", "The Champion", "Pig King", "Forest Doctor", "Lost Soul", "Apprentice Chef",},
	Callback = function(DHValue)
		_G.drophero = DHValue
        print(_G.drophero)
	end    
})

task.spawn(function()
    while task.wait() do
        if _G.hu1 then
            if _G.drophero ~= nil then
                local args = {
                    [1] = _G.drophero,
                    [2] = 0
                }
                game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.HeroService.RF.BuyLevel:InvokeServer(unpack(args))
                wait(0.1)
            end
        end
    end
end)


local Main = Window:MakeTab({
	Name = "Misc",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})




Main:AddButton({
	Name = "Teleport to Island",
	Callback = function()
        local args = {
            [1] = game:GetService("Players").LocalPlayer
        }
        game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.WeaponService.RE.TeleportToPlot:FireServer(unpack(args))
        wait(0.5)
        game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.WeaponService.RE.Receive:FireServer()
  	end    
})


Main:AddButton({
	Name = "Teleport to Main",
	Callback = function()
game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.WeaponService.RE.TeleportToMain:FireServer()
        wait(0.5)
        game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.WeaponService.RE.Receive:FireServer()
  	end    
})

local Main = Window:MakeTab({
	Name = "Auto Chest",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})




Main:AddToggle({
	Name = "Auto Open Chest",
	Default = false,
	Callback = function(TCValue)
		_G.togchest = TCValue
        print(_G.togchest)
	end    
})

Main:AddDropdown({
	Name = "Select Chest",
	Default = " ",
	Options = {"Wooden", "Silver", "Golden", "Legendary",},
	Callback = function(DCValue)
		_G.dropchest = DCValue
        print(_G.dropchest)
	end    
})

task.spawn(function()
    while task.wait() do
        if _G.togchest then
            if _G.dropchest ~= nil then
                local args = {
                    [1] = _G.dropchest
                }
                game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.ChestService.RF.BuyChest:InvokeServer(unpack(args))
            end
        end
    end
end)


Main:AddButton({
	Name = "Open Chest",
	Callback = function()
        local args = {
            [1] = _G.dropchest
        }
        game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_knit@1.4.7").knit.Services.ChestService.RF.BuyChest:InvokeServer(unpack(args))
  	end    
})

OrionLib:Init()


